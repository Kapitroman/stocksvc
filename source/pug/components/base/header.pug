mixin header(headerMods, currentUrl)
  header.header(class=headerMods)
    .container
      .logo
        +picture("content", "stocks-logo", "png", "226", "36", "logo-stock-sfc")
      ul.socials
        li.socials__item
          a.socials__link(href="")
            span.visually-hidden twitter
            +icon("twitter", 24, 24)
        li.socials__item
          a.socials__link(href="")
            span.visually-hidden discord
            +icon("discord", 24, 24)
        li.socials__item
          a.socials__link(href="")
            span.visually-hidden facebook
            +icon("facebook", 24, 24)
        li.socials__item
          a.socials__link(href="")
            span.visually-hidden instagram
            +icon("instagram", 24, 24)
        li.socials__item
          a.socials__link(href="")
            span.visually-hidden telegram
            +icon("telegram", 24, 24)
      .switch-color-theme
        label(aria-label="dark theme" tabindex="0")
          +icon("dark-mode", 24, 24)
          input.visually-hidden(type="checkbox" name="toggle-color-theme" value="dark" tabindex="-1" checked)
      +btn({
        text: "Sign Up", href: "#",
      }).btn--green
      +btn({
        text: "Login", href: "#",
      })

